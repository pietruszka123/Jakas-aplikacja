<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jakas_aplikacja.NWD">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="NWD"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Wynik: ?"
                x:Name="Wynik"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="WYNIK"
                FontSize="18"
                HorizontalOptions="Center" />

            <Entry x:Name="firstNumber"
                    Placeholder="pierwszy numer"
                Keyboard="Numeric"/>
            <Entry x:Name="secondNumber"
                   Placeholder="drugi numer"
                Keyboard="Numeric"/>

            <Button
                x:Name="CounterBtn"
                Text="Oblicz"
                SemanticProperties.Hint="OBLICZA NWD"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
